#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/mnt/c/www/gama/graphql/packages/server/node_modules/.pnpm/nodemon@2.0.4/node_modules/nodemon/bin/nodemon.js/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/.pnpm/nodemon@2.0.4/node_modules/nodemon/bin/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/.pnpm/nodemon@2.0.4/node_modules/nodemon/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/.pnpm/nodemon@2.0.4/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/.pnpm/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules:/mnt/c/www/gama/graphql/packages/node_modules:/mnt/c/www/gama/graphql/node_modules:/mnt/c/www/gama/node_modules:/mnt/c/www/node_modules:/mnt/c/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/nodemon/bin/nodemon.js/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/nodemon/bin/node_modules:/mnt/c/www/gama/graphql/packages/server/node_modules/nodemon/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../nodemon/bin/nodemon.js" "$@"
else 
  exec node  "$basedir/../nodemon/bin/nodemon.js" "$@"
fi
